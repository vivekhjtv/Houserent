                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Bachelors_fix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view9"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Bachelors Allow:"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Bachelors_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view9"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="yes/no"
                    android:textSize="18dp"/>
            </LinearLayout>
            <View
                android:id="@+id/view10"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/Bachelors_house"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent"
                tools:ignore="InvalidId" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Maintenance_fix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Maintenance:"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Maintenance_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view10"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="1600"
                    android:textSize="18dp"/>
            </LinearLayout>
            <View
                android:id="@+id/view11"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/Maintenance_house"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent"
                tools:ignore="InvalidId" />
            <LinearLayout
