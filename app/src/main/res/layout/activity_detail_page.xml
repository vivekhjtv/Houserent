<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetailPage">

    <ScrollView
        android:id="@+id/scrollView_detail_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <HorizontalScrollView
                android:id="@+id/horizontal_scrollView_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_detail_page1"
                android:layout_width="379dp"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/login"
                android:adjustViewBounds="true"/>


        </LinearLayout>
            </HorizontalScrollView>
            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                tools:ignore="InvalidId" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/price_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:text="Price:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/price_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="rupees"
                android:textSize="18dp"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/BHK_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_fix"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:text="BHK:" />


            <TextView
                android:id="@+id/BHK_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="18dp"
                android:text="bhk"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/area_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_house"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="Area:"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/area_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Sq feet"
                android:textSize="18dp"
                />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/address_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/area_fix"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:layout_marginTop="3dp"
                android:text="Address:" />

            <TextView
                android:id="@+id/address_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="Location"
                android:textSize="18dp"/>
            </LinearLayout>


        <LinearLayout
