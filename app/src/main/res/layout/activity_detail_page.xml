            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Bathroom_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:text="BathRoom:" />

            <TextView
                android:id="@+id/Bathroom_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view5"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:text="2" />
        </LinearLayout>
            <View
                android:id="@+id/view6"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/Bathroom_house"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent"
                tools:ignore="InvalidId" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Furnish_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view6"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:text="Furnish:" />

            <TextView
                android:id="@+id/Furnish_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view6"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:text="Furnished" />
        </LinearLayout>
            <View
                android:id="@+id/view9"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/Furnish_house"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent"
                tools:ignore="InvalidId" />
            <LinearLayout
