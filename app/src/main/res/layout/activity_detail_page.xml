                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Total_floor_fix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view11"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Total Floors:"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Total_floor_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view11"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="6"
                    android:textSize="18dp"/>
            </LinearLayout>
            <View
                android:id="@+id/view12"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/Total_floor_house"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent"
                tools:ignore="InvalidId" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Car_parking_fix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view12"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Car Parking:"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Car_parking_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view12"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="3"
                    android:textSize="18dp"/>
            </LinearLayout>
            <View
                android:id="@+id/view13"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/Car_parking_house"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent"
                tools:ignore="InvalidId" />
