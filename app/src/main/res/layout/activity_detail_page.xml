                <TextView
                    android:id="@+id/Facing_fix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view13"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
