                android:layout_height="wrap_content"
                android:layout_below="@id/address_fix"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:layout_marginTop="3dp"
                android:text="City:" />

            <TextView
                android:id="@+id/City_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="City"
                android:textSize="18dp"/>
        </LinearLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@+id/City_fix"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                tools:ignore="InvalidId" />

            <TextView
                android:id="@+id/Additional_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:text="Additional Details"
                android:textSize="25dp"
                android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Floor_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Additional_details"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Floor Number:"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/Floor_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Additional_details"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
