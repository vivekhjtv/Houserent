<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact"
    android:background="@drawable/back6">


    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/background"
        />


    <EditText
        android:id="@+id/msubject"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/subject"
        android:ems="10"
        android:hint="Enter Subject"
        android:textColor="@color/background"
        android:textColorHint="@color/background"
        android:inputType="textPersonName"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/message_text"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="Enter Your Message"
        android:inputType="textPersonName"
        android:lines="10"
        android:textColor="@color/background"
        android:textColorHint="@color/background"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:text="To:"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/background"
        />
    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pemail"
        android:text="Subject:"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/background"
        />
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msubject"
        android:text="Message:"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/background"
        />
    <EditText
        android:id="@+id/pemail"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/email"
        android:ems="10"
        android:hint="Enter Email"
        android:textColor="@color/background"
        android:textColorHint="@color/background"
        android:inputType="textPersonName"
        android:scrollbarSize="4dp"
        android:textSize="20dp" />




    <EditText
        android:id="@+id/pnum1"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/message_text"
        android:ems="10"
        android:hint="Enter Mobile Number"
        android:textColor="@color/background"
        android:textColorHint="@color/background"
        android:inputType="textPersonName"
        android:scrollbarSize="4dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/contact_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/pnum1"
        android:background="@drawable/button_rounded"
        android:text="Email"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:id="@+id/bt_call"
        android:layout_below="@+id/contact_button"
        android:src="@drawable/ic_call"
        android:background="@drawable/bg_round1"
        />

</RelativeLayout>